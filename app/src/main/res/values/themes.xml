<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LifeStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="Theme.LifeStyle" parent="Base.Theme.LifeStyle">
        <item name="colorPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:colorControlHighlight">@android:color/darker_gray</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/celula</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.LifeStyle</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">#FFFFFF</item> <!-- Color de fondo deseado -->
    </style>
</resources>