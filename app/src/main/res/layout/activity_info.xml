<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    app:layout_constraintTop_toBottomOf="@+id/constraint2"
    android:id="@+id/constraint1">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintInfo2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@id/imageView3">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fotoPerfil2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:scaleType="centerCrop"
            android:background="@color/black"
            app:shapeAppearanceOverlay="@style/cicular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <TextView
            android:id="@+id/nombreUsuario2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hugo Olivencia chiner"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/fotoPerfil2"
            app:layout_constraintTop_toTopOf="@id/fotoPerfil2"
            app:layout_constraintBottom_toBottomOf="@id/fotoPerfil2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


   </LinearLayout>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botonFavorito2"
        app:layout_constraintTop_toBottomOf="@id/constraintInfo2" />
    <TextView
        android:padding="5dp"
        android:id="@+id/titleTextView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Título del elemento"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />


    <ImageButton
        android:id="@+id/botonFavorito2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_star_full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:contentDescription="Descripcion"/>

    <TextView
        android:id="@+id/prepTimeTextView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Tiempo de preparación: 20 minutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutInfo2"
        app:layout_constraintTop_toBottomOf="@id/titleTextView3" />


    <LinearLayout
        android:id="@+id/linearLayoutInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prepTimeTextView3">

        <TextView
            android:id="@+id/tituloIngredientes2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Ingredientes"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/prepTimeTextView2" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutPasos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfo2">

        <TextView
            android:id="@+id/tituloPasos2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Pasos de preparación"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfo2"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


